<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:visibility="visible">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="208dp" app:srcCompat="@android:drawable/alert_dark_frame"
            android:id="@+id/oImage"/>

        <EditText
            android:id="@+id/oComment"
            android:layout_width="match_parent"
            android:layout_height="216dp"
            android:background="@color/LemonChiffon"
            android:ems="10"
            android:inputType="textCapWords|textMultiLine" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/oBtn_Attach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Adjuntar" />
            <Button
                android:text="Foto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/oBtn_Photo" android:layout_weight="1"/>
            <Button
                android:text="Enviar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/oBtn_Send" android:layout_weight="1"/>
            <Button
                android:text="Salir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/oBtn_Exit" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>